{
  "compilerOptions": {
    "module": "NodeNext",
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "ui/*": ["./*"]
    },
    "skipLibCheck": true,
  },
  "include": ["**/*", "**/.*"],
}